{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
		"no-console": "off",
        "indent": [
            1,
            "tab",
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            1,
            "unix"
        ],
        "no-unused-vars": [
            1
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
                }],
        "semi": [
            "error",
            "always"
        ]
	},
	"parserOptions": {
        "sourceType": "module"
    }
}
